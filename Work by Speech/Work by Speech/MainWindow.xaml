                                          Header="Duplicate      Ctrl + D"
                                          Click="MIduplicate_profiles_Click"/>
                                <MenuItem x:Name="MIdelete_profiles" 
                                          Header="Delete         Del"
                                          Click="MIdelete_profiles_Click"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.Resources>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                            </Style>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding enabled}" Value="True">
                                        <Setter Property="Foreground" Value="Navy" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding enabled}" Value="False">
                                        <Setter Property="Foreground" Value="#E80404" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView AllowsColumnReorder="True">
                                <GridViewColumn Header="Name" Width="182" DisplayMemberBinding="{Binding name}" />
